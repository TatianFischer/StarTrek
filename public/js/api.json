{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "StarTrek",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://startrek.local/api"
    }
  ],
  "paths": {
    "/series/{id}": {
      "get": {
        "summary": "Details about a serie",
        "operationId": "listSerie",
        "tags": [
          "serie"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the serie",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Details about a serie",
            "headers": {
              "x-next": {
                "description": "A link to the next page of responses",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Serie"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Serie": {
        "type": "object",
        "required": [
          "id",
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "synopsis": {
            "type": "string"
          },
          "police": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "is_film": {
            "type": "boolean"
          },
          "debut": {
            "type": "string",
            "format": "date"
          },
          "end": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}